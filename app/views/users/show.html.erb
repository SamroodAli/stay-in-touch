<section class="user-section">
  <h2><%= "Name: #{@user.name}" %></h2>
  <% if !requested_user?(@user) %>
    <%= render 'request' %>
  <% else %>
    <%= render 'cancel_request' %>
  <% end %>
  <article class="timeline">
    <h3>Recent posts:</h3>
    <ul class="posts">
      <%= render @posts %>
    </ul>
  </article>
</section>
