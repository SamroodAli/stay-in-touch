<!DOCTYPE html>
<html>
  <head>
    <title>Stay in touch</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <nav class="nav">
      <% if current_user %>
        <%= link_to 'Stay in touch', root_path %>
        <div class="menu">
          <div class="menu-item">
            <%= menu_link_to 'Timeline', posts_path %>
          </div>
          <div class="menu-item">
            <%= menu_link_to 'All users', users_path %>
          </div>
          <div class="menu-item">
            <%= menu_link_to 'My friends',friends_user_path(current_user)  %>
          </div>
          <div class="menu-item">
            <%= menu_link_to 'New post',root_path %>
          </div>
          <div class="menu-item">
            <%= menu_link_to 'Pending requests', pending_requests_user_path(current_user) %>
          </div>
          <div class="menu-item">
            <%= menu_link_to current_user.name, user_path(current_user) %>
          </div>
        </div>
        <%= link_to 'Sign out', destroy_user_session_path, method: :delete %>
      <% else %>
        <div class="sign-link">
          <%= link_to 'Sign in', user_session_path %>
          <%= link_to 'Sign Up', new_user_registration_path %>
        </div>
      <% end %>
    </nav>
    <% if notice.present? %>
      <div class="notice">
        <p> <%= notice %> </p>
      </div>
    <% end %>
    <% if alert.present? %>
      <div class="alert">
        <p> <%= alert %> </p>
      </div>
    <% end %>
    <main class="main">
      <%= yield %>
    </main>
  </body>
</html>
